<% content_for :head do %>
  <h3>Penerbit</h3>
  <span id="header_desc">daftar penerbit</span>
<% end %>

<%= paginate @publishers %>

<table>
  
<% @publishers.each do |p| %>

  <p>
    <%= p.id %>
    <span class="edit">
      <%= link_to p.name, edit_librarian_publisher_path(p) %>
    </span>
    
    <%= p.address %>
    <span class="delete">
      <%= link_to "delete", librarian_publisher_path(p), :confirm=>"delete?", :method=>"delete"  %>
    </span>
  </p>
  
<% end %>
</table>

<%= link_to "new publisher", new_librarian_publisher_path %>

