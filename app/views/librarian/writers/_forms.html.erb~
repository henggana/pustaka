<%= form_for(@writers) do |f| %>
  <% if @writers.errors.any? %>
    <div id="error_explanation">
      <ul>
      <% @writers.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
    
  <%= f.label :name %>
    
  <%= f.text_field :name %>
  
  <%= f.label :about %>
    
  <%= f.text_area :about %>
  
  <%= f.submit %>
  
<% end %>
